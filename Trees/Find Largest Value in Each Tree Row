



    public List<Integer> largestValues(TreeNode root) {
        
        List<Integer> ans = new ArrayList<Integer>();
        Queue<TreeNode> q =new LinkedList<>();
        TreeNode temp;
        if(root != null) //check for null case
            q.offer(root); // insert root in queue
        
        while(!q.isEmpty())
        {
            int size = q.size();
            int max = Integer.MIN_VALUE; 
           for(int i = 0 ; i < size ; i++)
           {
               temp = q.poll();
               max = Math.max(max , temp.val); // comparing current val with max in the same row
               
                if(temp.left != null)
                   q.offer(temp.left); // insert left child
                if(temp.right != null)
                   q.offer(temp.right); // insert right child
           }
            ans.add(max); // add max value of the row to final answer
        }
        
        return ans;    
 }
